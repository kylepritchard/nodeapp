*/

.growl
    position fixed
    top 5%
    left 50%
    width 400px
    height 100px
    margin-left -200px
    z-index 9999
    opacity 0.95

.growl-item
    height 100px

.growl-item.ng-enter,
.growl-item.ng-leave
    transition 5s linear all

.growl-item.ng-enter,
.growl-item.ng-leave.ng-leave-active
    opacity 0

.growl-item.ng-leave,
.growl-item.ng-enter.ng-enter-active
    opacity 1
