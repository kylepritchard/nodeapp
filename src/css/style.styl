@import 'nib'

// CUSTOM NAVIGATION STYLING

.navbar-custom
    background-color black
    border-bottom none
    margin-bottom 0

    .navbar-header

        a
            color #fff

    ul.nav
        li
            a
                color #fff

// CUSTOM CAROUSEL STYLING

.carousel-control
    display none

.carousel-caption
    > p
        animation-duration 3s
        animation-delay 1s

//ADMIN STYLING

#page-wrapper
    margin-top 50px

//GROWL STYLING

/**
