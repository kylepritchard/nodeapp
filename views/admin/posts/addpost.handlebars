{{!-- Content --}}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Add new post</h3>
            </div>
            <div class="panel-body">

                <form role="form" id="form" enctype="multipart/form-data" action="/admin/posts/newpost" method="post">

                    <div class="form-group">
                        <label>Post Title</label>
                        <input class="form-control" type="title" name="title">
                        <p class="help-block">Example block-level help text here.</p>
                    </div>

                    <div class="form-group">
                        <label>Post Content</label>
                        <textarea class="form-control" rows="20" name="content" id="content"></textarea>
                    </div>

                    <button type="submit" class="btn btn-default">Publish</button>

                </form>
            </div>
        </div>
    </div>
</div>
